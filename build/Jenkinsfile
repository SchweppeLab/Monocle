pipeline {
    triggers {
        pollSCM('H/12 * * * 1-5')
    }
    environment {
        HOME = '/tmp'
        VERSION = 1
    }
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir 'build'
            label 'builder'
        }
    }
    stages {
        stage('build-lib') {
            steps {
                sh 'dotnet --version'
                sh '(cd Monocle/ && dotnet build)'
            }
        }
        stage('build-cli') {
            steps {
                sh 'dotnet --version'
                sh '(cd Monocle.CLI/ && dotnet build)'
            }
        }
        stage('unit-test') {
            steps {
                sh '(cd Monocle.Tests/ && dotnet test)'
            }
        }
        stage('build-rpm') {
            steps {
                sh 'bash build/rpm/build_rpm.sh'
            }
        }
        stage('build-deb') {
            steps {
                sh 'bash build/deb/build_deb.sh'
            }
        }
    }
    post {
        always {
            archiveArtifacts 'build/deb/*.deb,build/deb/*.changes,build/rpm/*.rpm'
        }
    }
}

