pipeline {
    environment {
        HOME = '/tmp'
    }
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir 'build'
            label 'builder'
        }
    }
    stages {
        stage('build-lib') {
            steps {
                sh 'dotnet --version'
                sh '(cd Monocle/ && dotnet build)'
            }
        }
        stage('build-cli') {
            steps {
                sh 'dotnet --version'
                sh '(cd Monocle.CLI/ && dotnet build)'
            }
        }
        stage('unit-test') {
            steps {
                sh '(cd Monocle.Tests/ && dotnet test)'
            }
        }
        stage('build-rpm') {
            steps {
                sh 'bash build/rpm/build_rpm.sh'
            }
        }
    }
    post {
        always {
            archiveArtifacts '~/rpmbuild/RPMS/'
        }
    }

}

